# Common
DEBUG=True
LOCAL_STORAGE="~/storage/app"

# App
APP__HOST=0.0.0.0
APP__PORT=8000
LOGGING__LOG_FOLDER="logs"

# Security
TOKEN__SECRET_JWT_KEY="mysecretkey"
TOKEN__SECRET_FERNET_KEY="mysecretkey"
TOKEN__ALGORITHM="HS256"

# Database
DB__USERNAME="username"
DB__PASSWORD="password"
DB__HOST=localhost
DB__PORT=5432
DB__TABLENAME="tablename"

# Redis
REDIS__HOST=localhost
REDIS__PORT=6379
REDIS__DB_REQUEST_LIMITER=0
REDIS__DB_REFRESH_TOKEN=1

# Stream logger
LOGGING__STREAM__ENABLED=True
