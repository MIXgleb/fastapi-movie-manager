LOGGING__ERROR_FILE__PATH="logs/{time:YYYY-MM-DD}/error.log"
LOGGING__ERROR_FILE__ROTATION="00:00"
LOGGING__ERROR_FILE__RETENTION="30 days"

# Json log file
LOGGING__JSON_FILE__ENABLED=False
